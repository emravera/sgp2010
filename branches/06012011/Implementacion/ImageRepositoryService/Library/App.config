<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.web>
    <compilation debug="true"/>
  </system.web>
  <system.serviceModel>
    <services>
      <service name="ImageRepositoryService.Service" behaviorConfiguration="ImageRepositoryServiceNetTcpBehavior">
        <!-- Service Endpoints -->
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:5555/Service/"/>
          </baseAddresses>
        </host>
        <endpoint name="NetTcpEndPoint"
                  address = ""
                  binding = "netTcpBinding"
                  contract = "ImageRepositoryService.IImageRepositoryService">
        </endpoint>
        <endpoint name ="NetTcpMetadataPoint"
                  address="mex"
                  binding="mexTcpBinding"
                  contract="IMetadataExchange"/>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="ImageRepositoryServiceNetTcpBehavior">
          <serviceMetadata httpGetEnabled="false"/>
          <serviceDebug includeExceptionDetailInFaults="false"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>